<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f4f4f4"
    >

    <LinearLayout

        android:background="#fff"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:orientation="vertical"
        android:elevation="5dp"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<LinearLayout
    android:background="#fff"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
android:elevation="2dp"
        android:background="@drawable/rect_startdate"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startDate"
        android:textSize="12sp"
        android:textColor="#111"
        android:text="12 3 24"/>

</LinearLayout>
    <LinearLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_weight="0"
        android:layout_margin="5dp"
        android:elevation="4dp"
        android:background="@drawable/rect"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:fontFamily="sans-serif-condensed"
        android:textSize="17sp"
        android:textColor="#fff"
        android:id="@+id/trainNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="51315" />

    <TextView
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:fontFamily="sans-serif-condensed"
        android:textSize="16sp"
        android:textColor="#422c64"
        android:id="@+id/trainName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dli-fn passenger"
        android:paddingLeft="17dp"
        android:textAllCaps="true"/>
        <TextView
            android:elevation="1dp"
            android:background="@drawable/rect_startdate"
            android:textAlignment="center"
            android:layout_weight="0"
            android:layout_gravity="center_vertical"
            android:fontFamily="sans-serif-condensed"
            android:textSize="13sp"
            android:textColor="#c2c2c2"
            android:id="@+id/trainType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="special"
            android:paddingRight="8dp"
            android:textAllCaps="true"/>
</LinearLayout>

    <LinearLayout
        android:padding="0dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:elevation="3dp"
                android:text="SCHEDULE"
                android:textColor="#636363"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:elevation="3dp"
                android:text="DIVERTED"
                android:textColor="#111"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout

            android:orientation="vertical"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

<LinearLayout
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:fontFamily="sans-serif-condensed"
        android:id="@+id/trainSrc"
        android:textColor="#111"
        android:textSize="13sp"
        android:text="C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:padding="2dp"
        android:layout_margin="5dp"
        android:src="@mipmap/arrow4"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#111"
        android:fontFamily="sans-serif-condensed"
        android:id="@+id/trainDstn"
        android:textSize="13sp"
        android:text="E"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
            <LinearLayout
                android:padding="2dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:fontFamily="sans-serif-condensed"
                    android:id="@+id/divertedFrom"
                    android:textColor="#111"
                    android:textSize="13sp"
                    android:text="C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:padding="2dp"
                    android:layout_margin="5dp"
                    android:src="@mipmap/arrow4"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView

                    android:id="@+id/divertedTo"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="#111"
                    android:textSize="13sp"
                    android:text="E"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    </LinearLayout>
</LinearLayout>
