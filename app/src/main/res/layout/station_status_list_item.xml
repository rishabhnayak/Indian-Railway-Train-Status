            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="180000"
            android:textAllCaps="true"/>
        <TextView
            android:id="@+id/actHalt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="180000"
            android:textAllCaps="true"/>
        <TextView
            android:id="@+id/pfNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="180000"
            android:textAllCaps="true"/>
        <TextView
            android:id="@+id/trainType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="180000"
