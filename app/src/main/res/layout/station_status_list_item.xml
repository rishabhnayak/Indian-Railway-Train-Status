            android:id="@+id/trainName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="180000"
            android:textAllCaps="true"/>
        <TextView
            android:id="@+id/trainSrc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="180000"
            android:textAllCaps="true"/>
        <TextView
            android:id="@+id/trainDstn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="180000"
            android:textAllCaps="true"/>
        <TextView
            android:id="@+id/schArr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="180000"
            android:textAllCaps="true"/>
        <TextView
            android:id="@+id/schDep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="180000"
            android:textAllCaps="true"/>
        <TextView
            android:id="@+id/schHalt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="180000"
            android:textAllCaps="true"/>
        <TextView
            android:id="@+id/actArr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="180000"
