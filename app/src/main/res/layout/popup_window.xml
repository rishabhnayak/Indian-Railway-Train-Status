<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center_vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
 android:id="@+id/rl_custom_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:background="@drawable/rect_startdate"
    android:layout_margin="15dp"
    android:elevation="15dp"
    >

    <LinearLayout
        android:gravity="center_horizontal"
        android:paddingBottom="25dp"
        android:paddingTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    <Button
        android:layout_margin="15dp"
        android:background="@drawable/schedule_popup_pressed"
        android:id="@+id/trn_rt"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text=""
        android:layout_below="@+id/trn_live"
        android:layout_centerHorizontal="true" />
            <TextView
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/sche"
                android:textAllCaps="true"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Schedule"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <Button
            android:id="@+id/trn_live"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="15dp"
            android:background="@drawable/live_popup_pressed"
            android:text="" />
            <TextView
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/liveee"
                android:textAllCaps="true"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Live status"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
</LinearLayout>