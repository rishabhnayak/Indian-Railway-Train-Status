<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="5dp"
    android:background="#f4f4f4"
    android:paddingRight="5dp"
    >
    <LinearLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="18dp"
        android:paddingBottom="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:orientation="vertical"


        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <TextView
            android:paddingBottom="8dp"
            android:fontFamily="sans-serif-condensed"
            android:textSize="17sp"
            android:textColor="#422c64"
            android:id="@+id/trainNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="51315"/>

        <TextView
            android:fontFamily="sans-serif-condensed"
            android:textSize="15sp"
            android:textColor="#422c64"
            android:id="@+id/trainName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dli-fn passenger"
            android:paddingLeft="17dp"
            android:textAllCaps="true"/>
        </LinearLayout>
<LinearLayout
    android:fontFamily="sans-serif-condensed"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <TextView
            android:fontFamily="sans-serif-condensed"
            android:textSize="13sp"
            android:textColor="#111"
            android:id="@+id/trainSrc"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="src"
            android:layout_gravity="center_vertical"
            android:textAlignment="viewEnd"
            android:textAllCaps="true"/>
    <ImageView
        android:src="@mipmap/arrow2"
        android:textSize="13sp"
        android:textColor="#422c64"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />

        <TextView
            android:textSize="13sp"
            android:layout_gravity="center_vertical"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#111"
            android:id="@+id/trainDstn"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="dstn"
            android:textAlignment="textStart"
            android:textAllCaps="true"/>
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <TextView
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:paddingBottom="6dp"
            android:fontFamily="sans-serif-condensed"
            android:layout_weight="1"
            android:id="@+id/startDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11 may 2017"
            android:textSize="13sp"
            android:textColor="#422c64"/>

        <TextView
            android:textAlignment="textEnd"
            android:fontFamily="sans"
            android:paddingRight="5dp"
            android:textSize="13sp"
            android:textColor="#183f66"
            android:layout_weight="1"
            android:id="@+id/trainType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EXP"
            />
</LinearLayout>

    </LinearLayout>

</LinearLayout>