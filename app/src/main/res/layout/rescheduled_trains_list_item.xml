<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:background="#f4f4f4"
    >
    <LinearLayout
        android:background="#fff"
        android:elevation="10dp"
        android:layout_margin="5dp"
        android:padding="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="0"
                android:layout_margin="5dp"
                android:elevation="4dp"
                android:background="@drawable/rect"
                android:paddingBottom="1dp"
                android:paddingTop="1dp"
                android:fontFamily="sans-serif-condensed"
                android:textSize="17sp"
                android:textColor="#fff"
                android:id="@+id/trainNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="51315" />

            <TextView
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:fontFamily="sans-serif-condensed"
                android:textSize="16sp"
                android:textColor="#422c64"
                android:id="@+id/trainName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dli-fn passenger"
                android:paddingLeft="17dp"
                android:textAllCaps="true"/>
            <TextView
                android:layout_marginRight="-2dp"
                android:layout_marginLeft="-2dp"
                android:background="@drawable/rect4"
                android:textAlignment="center"
                android:layout_weight="0"
                android:layout_gravity="center_vertical"
                android:fontFamily="sans-serif-condensed"
                android:textSize="12sp"
                android:textColor="#FFF"
                android:id="@+id/trainType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="special"
                android:textAllCaps="true"/>
        </LinearLayout>

    <LinearLayout
        android:layout_marginTop="-20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:fontFamily="sans-serif-condensed"
            android:id="@+id/trainSrc"
            android:textColor="#111"
            android:textSize="13sp"
            android:text="C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_margin="5dp"
            android:src="@mipmap/arrow2"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:fontFamily="sans-serif-condensed"
            android:id="@+id/trainDstn"
            android:textColor="#111"
            android:textSize="13sp"
            android:text="E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
android:paddingBottom="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp">

        <LinearLayout
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:src="@mipmap/ic_stat_check_circle1"
                android:textColor="#0f840f"
                android:fontFamily="sans-serif-condensed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N/A"
                android:textSize="14sp" />
            <ImageView
                android:src="@mipmap/ic_stat_check_circle"
                android:textColor="#0f840f"
                android:fontFamily="sans-serif-condensed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N/A"
                android:textSize="14sp" />
        </LinearLayout>


        <LinearLayout
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:fontFamily="sans-serif-condensed"
                android:id="@+id/startDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="F"
                android:textSize="14sp" />

            <TextView
                android:textColor="#0f840f"
                android:fontFamily="sans-serif-condensed"
                android:id="@+id/newStartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N/A"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:fontFamily="sans-serif-condensed"
                android:id="@+id/scsTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="H"
                android:textSize="14sp" />

            <TextView
                android:textColor="#0f840f"
                android:fontFamily="sans-serif-condensed"
                android:id="@+id/resTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I"
                android:textSize="14sp" />
            
        </LinearLayout>

        <TextView
            android:layout_marginRight="12dp"
            android:fontFamily="sans-serif-condensed"
        android:id="@+id/resBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:text="J"
            android:textAlignment="textEnd"
            android:textColor="#af0000"
            android:textSize="14sp" />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
