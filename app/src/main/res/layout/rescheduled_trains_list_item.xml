<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/trainNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="#422c64"
            android:paddingRight="2dp"
            android:text="hjkhuihi-bhjkjh"
            android:textAllCaps="true"/>

        <TextView
            android:id="@+id/trainName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="#422c64"
            android:text="bghj"
            android:layout_alignParentRight="true"
            android:textAllCaps="true"
            />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

        <TextView
            android:id="@+id/trainSrc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_weight="1"
            android:textColor="#422c64"
            android:paddingRight="2dp"
            android:text="njgh"
            android:textAllCaps="true"/>

        <TextView
            android:id="@+id/trainDstn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#422c64"
            android:textSize="12sp"
            android:text="11100"
            android:textAllCaps="true"/>
       <TextView
           android:id="@+id/scsTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#422c64"
            android:text="hjkhuihi_bhjkjh"
            android:textAllCaps="true"/>

        <TextView
            android:id="@+id/resTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="bghj"
            android:textAllCaps="true"/>

        <TextView
            android:id="@+id/resBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="njgh"
            android:textAllCaps="true"/>

        <TextView
            android:id="@+id/startDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="11100"
            android:textAllCaps="true"/>
    </LinearLayout>

</LinearLayout>