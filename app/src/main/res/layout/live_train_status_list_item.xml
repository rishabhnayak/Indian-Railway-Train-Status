<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    >


    <LinearLayout
        android:id="@+id/SubItemsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="3dp">

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="hello"
                android:visibility="invisible"
                />
    <TextView
        android:gravity="right"
        android:id="@+id/bulliton"
        android:layout_gravity="center_vertical"
        android:background="@drawable/bulliton"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:fontFamily="sans-serif-condensed"
        android:visibility="invisible"
        />
</LinearLayout>
            <TextView
                android:id="@+id/sNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="#"
                android:textColor="#422c64"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView

                    android:textColor="#689F38"
                    android:id="@+id/StatusMsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:paddingLeft="2dp"
                    android:text=""
                    android:visibility="invisible" />
            </LinearLayout>

            <TextView
                android:id="@+id/stnCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="Station Name"
                android:textColor="#422c64"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/delayArr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-thin"
                android:text="delayArr"
                android:textColor="#b71916"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/lastUpdated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#422c64"
                android:textSize="11sp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="hello"
                android:visibility="invisible"

                />

            <TextView
                android:id="@+id/schArrTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-1dp"
                android:background="@drawable/strike_over"
                android:fontFamily="sans-serif-condensed"
                android:paddingBottom="2dp"
                android:text="Sch.\nDep."

                android:textSize="13sp" />

            <!--<TextView-->
            <!--android:visibility="gone"-->
            <!--android:fontFamily="sans-serif-thin"-->
            <!--android:paddingBottom="2dp"-->
            <!--android:textAlignment="center"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="Sch.\nDep."-->
            <!--android:textColor="#b71916"-->
            <!--android:textSize="11sp" />-->
            <TextView
                android:id="@+id/actArr"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="Sch.\nDep."
                android:textColor="#689F38"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="hello"
                android:visibility="invisible"

                />

            <TextView
                android:id="@+id/schDepTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-1dp"
                android:background="@drawable/strike_over"
                android:fontFamily="sans-serif-condensed"
                android:paddingBottom="2dp"
                android:text="Sch.\nDep."
                android:textSize="13sp" />
            <!--<TextView-->
            <!--android:visibility="gone"-->
            <!--android:fontFamily="sans-serif-thin"-->
            <!--android:textAlignment="center"-->
            <!--android:id="@+id/delayDep"-->
            <!--android:paddingBottom="2dp"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="Sch.\nDep."-->
            <!--android:textColor="#b71916"-->
            <!--android:textSize="11sp" />-->
            <TextView
                android:id="@+id/actDep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="Sch.\nDep."
                android:textColor="#689F38"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="hello"
                android:visibility="invisible"

                />

            <TextView

                android:id="@+id/pfNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="PF No."
                android:textAlignment="center"
                android:textColor="#422c64"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>

