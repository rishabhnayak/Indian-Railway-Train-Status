<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginBottom="0dp"
       android:background="#f4f4f4"
       android:orientation="horizontal"
       android:paddingLeft="12dp"
       android:paddingRight="12dp"
       android:paddingTop="12dp">


      <TextView
          android:id="@+id/sNo"
          android:layout_width="1dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="#"
          android:textColor="#422c64"
          android:textSize="14sp" />
          android:textSize="14sp" />

      <TextView
          android:id="@+id/stnCode"
          android:layout_width="1dp"
          android:layout_height="wrap_content"
          android:layout_weight="4"
          android:text="Station Name"
          android:textColor="#422c64"
          android:textSize="14sp" />


      <LinearLayout
          android:orientation="vertical"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1">
         <TextView
             android:paddingBottom="2dp"
             android:id="@+id/schArrTime"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Sch.\nDep."
             android:textColor="#422c64"
             android:textSize="13sp" />
         <TextView
             android:paddingBottom="2dp"
             android:textAlignment="center"
             android:id="@+id/delayArr"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Sch.\nDep."
             android:textColor="#b71916"
             android:textSize="11sp" />
         <TextView
             android:id="@+id/actArr"

             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Sch.\nDep."
             android:textColor="#1a4e16"
             android:textSize="13sp" />
      </LinearLayout>

      <LinearLayout
          android:orientation="vertical"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1">
      <TextView
          android:paddingBottom="2dp"
          android:id="@+id/schDepTime"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Sch.\nDep."
          android:textColor="#422c64"
          android:textSize="13sp" />
         <TextView
             android:textAlignment="center"
         android:id="@+id/delayDep"
android:paddingBottom="2dp"
         android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Sch.\nDep."
             android:textColor="#b71916"
             android:textSize="11sp" />
         <TextView
             android:id="@+id/actDep"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Sch.\nDep."
             android:textColor="#1a4e16"
             android:textSize="13sp" />
      </LinearLayout>
      <TextView
          android:textAlignment="center"
          android:id="@+id/pfNo"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="PF No."
          android:textColor="#422c64"
          android:textSize="14sp" />


   </LinearLayout>

</LinearLayout>
