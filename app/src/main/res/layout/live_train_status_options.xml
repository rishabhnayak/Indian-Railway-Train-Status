<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f4f4f4"
    >
    <LinearLayout
        android:padding="5dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
        android:textColor="#422c64"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/startDate"
        android:text="13 may 2017"/>


    <TextView
        android:paddingTop="2dp"
        android:textColor="#dc3a2e"
        android:textSize="13sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/totalLateMins"
        android:text="2min late"/>

   <TextView
       android:paddingBottom="2dp"
       android:textColor="#422c64"
       android:textSize="13sp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/curStn"
       android:text="ASR"/>

    <TextView
        android:paddingBottom="8dp"
        android:textColor="#422c64"
        android:textSize="12sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/totalJourney"
        android:text="1 day 17hrs 23min"/>


    <TextView
        android:textColor="#422c64"
        android:gravity="right"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lastUpdated"
        android:text="13 may 2017 10:18"/>
    </LinearLayout>
</LinearLayout>