<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff">



        <!--android:background="@drawable/ripple"-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:fontFamily="sans-serif-thin"
                android:background="@drawable/tap_searchh"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:id="@+id/selectTrain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Train"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="#422c64"
                />

        </LinearLayout>

    <LinearLayout
        android:id="@+id/disp_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f4f4f4"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/src_stn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-thin"
                android:text="hello"
                android:textAlignment="textEnd"
                android:textColor="#422c64" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:src="@mipmap/arrow2" />

            <TextView
                android:id="@+id/dstn_stn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-thin"
                android:text="hello"
                android:textColor="#422c64" />
        </LinearLayout>

        <LinearLayout
            android:background="#fff"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <TextView
                android:fontFamily="sans-serif-condensed"
                android:id="@+id/sun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Su"
                android:paddingRight="10sp"
                android:textSize="12sp"
                />
            <TextView
                android:fontFamily="sans-serif-condensed"
                android:id="@+id/mon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M"
                android:paddingRight="10sp"
                android:textSize="12sp"
                />
            <TextView
                android:fontFamily="sans-serif-condensed"
                android:id="@+id/tue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tu"
                android:paddingRight="10sp"
                android:textSize="12sp"
                />
            <TextView
                android:fontFamily="sans-serif-condensed"
                android:id="@+id/wed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="W"
                android:paddingRight="10sp"
                android:textSize="12sp"
                />
            <TextView
                android:fontFamily="sans-serif-condensed"
                android:id="@+id/thr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Th"
                android:paddingRight="10sp"
                android:textSize="12sp"
                />
            <TextView
                android:fontFamily="sans-serif-condensed"
                android:id="@+id/fri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="F"
                android:paddingRight="10sp"
                android:textSize="12sp"
                />
            <TextView
                android:fontFamily="sans-serif-condensed"
                android:id="@+id/sat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sa"

                android:textSize="12sp"
                />
        </LinearLayout>



    <LinearLayout
        android:elevation="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f4f4f4"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="12dp"
        android:layout_marginBottom="3dp">


        <TextView
            android:fontFamily="sans-serif-thin"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="#"
            android:textColor="#422c64"
            android:textSize="12sp" />
        <TextView
            android:fontFamily="sans-serif-thin"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="Station Name"
            android:textAllCaps="true"
            android:textColor="#422c64"
            android:textSize="14sp" />

        <TextView
            android:fontFamily="sans-serif-thin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Arri."
            android:textColor="#422c64"
            android:textSize="14sp" />

        <TextView
            android:fontFamily="sans-serif-thin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dep."
            android:textColor="#422c64"
            android:textSize="14sp" />
        <TextView
            android:fontFamily="sans-serif-thin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="P.No."
            android:textColor="#422c64"
            android:textSize="14sp" />


    </LinearLayout>

        <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="2dp"
            >
<TextView
    android:id="@+id/startDate"
    android:layout_centerHorizontal="true"
    android:textSize="12sp"
    android:fontFamily="sans-serif-thin"
    android:elevation="1dp"
    android:textColor="#422c64"
    android:background="@drawable/rect_startdate"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text=""/>
            <ListView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context="com.example.android.miwok.TrainSchdule"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">
            </ListView>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/loading"
        android:visibility="visible">



        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="200sp"
            android:visibility="visible"
            android:progressDrawable="@drawable/circular_progress_bar" />
        <TextView
            android:id="@+id/disp_msg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="60sp"
            android:layout_weight="1"
            android:visibility="gone"
            android:text="TextView" />

        <Button


            android:id="@+id/retryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rect"
            android:visibility="gone"
            android:layout_gravity="center"
            android:text="Retry"
            android:layout_marginBottom="220sp"
            android:textColor="#fff"
            android:textSize="15sp"
            android:textStyle="bold"
            android:onClick="RetryTask"/>
    </LinearLayout>

</LinearLayout>