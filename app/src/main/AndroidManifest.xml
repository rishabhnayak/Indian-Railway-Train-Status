<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.miwok"
    >
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Indian Railways"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CanceledTrains"
            android:label="Canceled Trains"
            android:screenOrientation="portrait"/>
        <activity android:name=".TrainSchdule"
            android:label="Train Schedule"
            android:screenOrientation="portrait"/>
        <activity android:name=".DivertedTrains"
            android:label="Diverted Trains"
            android:screenOrientation="portrait"/>
        <activity android:name=".RescheduledTrains"
            android:label="Rescheduled Trains"
            android:screenOrientation="portrait"/>
        <activity android:name=".Select_Train"
            android:label="Select Train"
            android:screenOrientation="portrait"/>
        <activity android:name=".Select_Station"
            android:label="Select Station"
            android:screenOrientation="portrait"/>
        <activity android:name=".Station_Status"
            android:label="Station Status"
            android:screenOrientation="portrait"/>
        <activity android:name=".trn_bw_2_stn"
            android:label="Trains BW Stations"
            android:screenOrientation="portrait"/>
        <activity android:name=".live_train_options"
            android:label="Live Train Status"
            android:screenOrientation="portrait"/>
        <activity android:name=".live_train_status_selected_item"
        android:label="Live Train Status"
        android:screenOrientation="portrait"/>
    </application>

</manifest>